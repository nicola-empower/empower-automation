---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import {
    Bot,
    ScanSearch,
    Cable,
    Workflow,
    Search,
    Zap,
    GitBranch,
    CheckCircle,
} from "lucide-react";
---

<Layout title="Automation Services | Empower Automation">
    <Navbar />

    <main id="main-content" class="pt-24 pb-20">
        <!-- Hero Section -->
        <section class="px-4 max-w-4xl mx-auto text-center mb-20">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                Automation & <span class="text-brand-orange"
                    >Technical Solutions</span
                >
            </h1>
            <p class="text-xl text-gray-400 leading-relaxed max-w-3xl mx-auto">
                Work Smarter, Not Harder. We design, build, and implement custom
                automations that streamline your workflows, connect your digital
                tools, and unlock unparalleled efficiency.
            </p>
        </section>

        <!-- Intro Text -->
        <section class="px-4 max-w-4xl mx-auto text-center mb-24">
            <div
                class="p-8 rounded-2xl bg-[#161b22] border border-slate-800 shadow-xl"
            >
                <p class="text-lg text-gray-300 leading-relaxed">
                    Repetitive tasks drain your time and energy. I design,
                    build, and implement custom automations that streamline your
                    workflows, connect your digital tools, and unlock
                    unparalleled efficiency, saving you countless hours every
                    week.
                </p>
            </div>
        </section>

        <!-- Services Grid -->
        <section class="px-4 max-w-6xl mx-auto mb-24">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-white mb-4">
                    Google Workspace <span class="text-brand-gold"
                        >Automations & Solutions</span
                    >
                </h2>
                <p class="text-gray-400 max-w-2xl mx-auto">
                    Unlock unparalleled efficiency. I design, build, and
                    implement custom scripts to automate repetitive tasks,
                    streamline workflows, and connect your Google Workspace apps
                    in powerful new ways, saving you hours every week.
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
                <!-- Service 1 -->
                <div
                    class="bg-[#161b22] p-8 rounded-xl border border-slate-800 hover:border-brand-orange transition-colors group"
                >
                    <div
                        class="w-14 h-14 bg-brand-orange/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-brand-orange/20 transition-colors"
                    >
                        <Bot className="w-8 h-8 text-brand-orange" />
                    </div>
                    <h3 class="text-xl font-bold text-white mb-3">
                        Google Workspace Automation
                    </h3>
                    <p class="text-gray-400 leading-relaxed">
                        Leveraging Google Apps Script to streamline workflows
                        and create bespoke tools within Gmail, Sheets, Docs,
                        Calendar, and Drive.
                    </p>
                </div>

                <!-- Service 2 -->
                <div
                    class="bg-[#161b22] p-8 rounded-xl border border-slate-800 hover:border-brand-orange transition-colors group"
                >
                    <div
                        class="w-14 h-14 bg-brand-orange/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-brand-orange/20 transition-colors"
                    >
                        <ScanSearch className="w-8 h-8 text-brand-orange" />
                    </div>
                    <h3 class="text-xl font-bold text-white mb-3">
                        Web Data Extraction & Business Insights
                    </h3>
                    <p class="text-gray-400 leading-relaxed">
                        Systematically collecting publicly available, structured
                        data from websites for market research, competitor
                        analysis, and lead generation.
                    </p>
                </div>
            </div>

            <!-- Service 3 (Full Width) -->
            <div
                class="bg-[#161b22] p-8 rounded-xl border border-slate-800 hover:border-brand-orange transition-colors group mt-8"
            >
                <div class="text-center mb-16">
                    <h2 class="text-3xl font-bold text-white mb-4">
                        Our Automation Process
                    </h2>
                    <p class="text-gray-400 max-w-2xl mx-auto">
                        A clear, collaborative process to ensure the solution
                        perfectly fits your needs.
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    <!-- Step 1 -->
                    <div class="relative p-6 text-center">
                        <div
                            class="w-16 h-16 mx-auto bg-brand-dark border-2 border-brand-gold rounded-full flex items-center justify-center mb-6 shadow-[0_0_15px_rgba(253,185,19,0.2)]"
                        >
                            <span class="text-2xl font-bold text-brand-gold"
                                >1</span
                            >
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">
                            Discovery & Analysis
                        </h3>
                        <p class="text-gray-400 text-sm leading-relaxed">
                            We'll start with a deep dive into your current
                            workflows to identify the biggest bottlenecks and
                            opportunities for automation.
                        </p>
                    </div>

                    <!-- Step 2 -->
                    <div class="relative p-6 text-center">
                        <div
                            class="w-16 h-16 mx-auto bg-brand-dark border-2 border-brand-gold rounded-full flex items-center justify-center mb-6 shadow-[0_0_15px_rgba(253,185,19,0.2)]"
                        >
                            <span class="text-2xl font-bold text-brand-gold"
                                >2</span
                            >
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">
                            Build & Implement
                        </h3>
                        <p class="text-gray-400 text-sm leading-relaxed">
                            I'll build the custom script or integration, test it
                            thoroughly, and implement it seamlessly into your
                            existing systems.
                        </p>
                    </div>

                    <!-- Step 3 -->
                    <div class="relative p-6 text-center">
                        <div
                            class="w-16 h-16 mx-auto bg-brand-dark border-2 border-brand-gold rounded-full flex items-center justify-center mb-6 shadow-[0_0_15px_rgba(253,185,19,0.2)]"
                        >
                            <span class="text-2xl font-bold text-brand-gold"
                                >3</span
                            >
                        </div>
                        <h3 class="text-xl font-bold text-white mb-3">
                            Support & Optimise
                        </h3>
                        <p class="text-gray-400 text-sm leading-relaxed">
                            After deployment, I provide ongoing support to
                            ensure everything runs smoothly and make adjustments
                            as your needs evolve.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Workflow Example Section -->
        <section class="px-4 max-w-6xl mx-auto mb-24">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-white mb-4">
                    Example Workflow: <span class="text-brand-orange"
                        >Automated Lead Follow-Up</span
                    >
                </h2>
                <p class="text-gray-400 max-w-2xl mx-auto">
                    See how we transform a manual, error-prone process into a
                    seamless automated journey.
                </p>
            </div>

            <div class="relative">
                <!-- Connecting Line (Desktop) -->
                <div
                    class="hidden md:block absolute top-1/2 left-0 w-full h-1 bg-linear-to-r from-brand-orange/20 via-brand-gold/20 to-brand-orange/20 -translate-y-1/2 z-0"
                >
                </div>

                <div class="grid md:grid-cols-5 gap-6 relative z-10">
                    <!-- Step 1 -->
                    <div
                        class="bg-[#161b22] p-6 rounded-xl border border-slate-800 text-center group hover:-translate-y-2 transition-transform duration-300"
                    >
                        <div
                            class="w-12 h-12 mx-auto bg-brand-dark border-2 border-brand-orange rounded-full flex items-center justify-center mb-4 shadow-[0_0_15px_rgba(242,111,33,0.2)] font-bold text-brand-orange"
                        >
                            01
                        </div>
                        <h3 class="text-white font-bold mb-2 text-sm">
                            Web Form Submission
                        </h3>
                        <p class="text-gray-500 text-xs leading-relaxed">
                            Customer fills out inquiry form on your website.
                        </p>
                    </div>

                    <!-- Step 2 -->
                    <div
                        class="bg-[#161b22] p-6 rounded-xl border border-slate-800 text-center group hover:-translate-y-2 transition-transform duration-300 delay-100"
                    >
                        <div
                            class="w-12 h-12 mx-auto bg-brand-dark border-2 border-brand-gold rounded-full flex items-center justify-center mb-4 shadow-[0_0_15px_rgba(253,185,19,0.2)] font-bold text-brand-gold"
                        >
                            02
                        </div>
                        <h3 class="text-white font-bold mb-2 text-sm">
                            Data to Google Sheet
                        </h3>
                        <p class="text-gray-500 text-xs leading-relaxed">
                            Info instantly organised in a master sheet.
                        </p>
                    </div>

                    <!-- Step 3 -->
                    <div
                        class="bg-[#161b22] p-6 rounded-xl border border-slate-800 text-center group hover:-translate-y-2 transition-transform duration-300 delay-200"
                    >
                        <div
                            class="w-12 h-12 mx-auto bg-brand-dark border-2 border-brand-orange rounded-full flex items-center justify-center mb-4 shadow-[0_0_15px_rgba(242,111,33,0.2)] font-bold text-brand-orange"
                        >
                            03
                        </div>
                        <h3 class="text-white font-bold mb-2 text-sm">
                            Tagged in CRM
                        </h3>
                        <p class="text-gray-500 text-xs leading-relaxed">
                            Contact created and tagged as 'New Lead'.
                        </p>
                    </div>

                    <!-- Step 4 -->
                    <div
                        class="bg-[#161b22] p-6 rounded-xl border border-slate-800 text-center group hover:-translate-y-2 transition-transform duration-300 delay-300"
                    >
                        <div
                            class="w-12 h-12 mx-auto bg-brand-dark border-2 border-brand-gold rounded-full flex items-center justify-center mb-4 shadow-[0_0_15px_rgba(253,185,19,0.2)] font-bold text-brand-gold"
                        >
                            04
                        </div>
                        <h3 class="text-white font-bold mb-2 text-sm">
                            Email Sent
                        </h3>
                        <p class="text-gray-500 text-xs leading-relaxed">
                            Personalised follow-up sent immediately.
                        </p>
                    </div>

                    <!-- Step 5 -->
                    <div
                        class="bg-[#161b22] p-6 rounded-xl border border-slate-800 text-center group hover:-translate-y-2 transition-transform duration-300 delay-400"
                    >
                        <div
                            class="w-12 h-12 mx-auto bg-brand-dark border-2 border-brand-orange rounded-full flex items-center justify-center mb-4 shadow-[0_0_15px_rgba(242,111,33,0.2)] font-bold text-brand-orange"
                        >
                            05
                        </div>
                        <h3 class="text-white font-bold mb-2 text-sm">
                            Status Updated
                        </h3>
                        <p class="text-gray-500 text-xs leading-relaxed">
                            Lead marked as 'Contacted' in CRM.
                        </p>
                    </div>
                </div>

                <div
                    class="mt-12 text-center bg-brand-orange/10 border border-brand-orange/20 rounded-lg p-6 max-w-3xl mx-auto"
                >
                    <h4 class="text-brand-orange font-bold mb-2">
                        The Business Impact
                    </h4>
                    <p class="text-gray-300">
                        Saves hours of manual data entry each week and prevents
                        costly errors that lose valuable leads, ensuring rapid
                        and consistent communication.
                    </p>
                </div>
            </div>
        </section>

        <!-- Ready-Made Solutions (Cross-Linking) -->
        <section class="px-4 max-w-6xl mx-auto mb-24">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold text-white mb-4">
                    Looking for Ready-Made Solutions?
                </h2>
                <p class="text-gray-400 max-w-2xl mx-auto">
                    Check out our popular "Done-For-You" automation packages.
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                <a
                    href="/products/automated-invoice"
                    class="group bg-[#161b22] border border-slate-800 p-8 rounded-xl hover:border-brand-orange transition-all hover:-translate-y-1"
                >
                    <h3
                        class="text-xl font-bold text-white mb-2 group-hover:text-brand-orange transition-colors"
                    >
                        Automated Invoice Workflow
                    </h3>
                    <p class="text-gray-400 text-sm">
                        Transform your billing with a one-time investment.
                        Automate invoicing and eliminate errors.
                    </p>
                </a>
                <a
                    href="/products/smarter-work-day"
                    class="group bg-[#161b22] border border-slate-800 p-8 rounded-xl hover:border-brand-gold transition-all hover:-translate-y-1"
                >
                    <h3
                        class="text-xl font-bold text-white mb-2 group-hover:text-brand-gold transition-colors"
                    >
                        Smarter Work Day
                    </h3>
                    <p class="text-gray-400 text-sm">
                        Automate your inbox, calendar, and daily planning. Get
                        your time back.
                    </p>
                </a>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="px-4 max-w-4xl mx-auto text-center">
            <div
                class="bg-linear-to-br from-[#161b22] to-brand-dark border border-slate-800 p-12 rounded-2xl shadow-2xl relative overflow-hidden"
            >
                <div
                    class="absolute inset-0 bg-brand-orange/5 pointer-events-none"
                >
                </div>

                <h2
                    class="text-3xl md:text-4xl font-bold text-white mb-6 relative z-10"
                >
                    Ready to Automate Your Success?
                </h2>
                <p
                    class="text-lg text-gray-400 mb-8 max-w-2xl mx-auto relative z-10"
                >
                    Let's eliminate repetitive work and build powerful solutions
                    that give you a competitive edge. Tell me about your biggest
                    time-waster.
                </p>

                <a
                    href="/contact"
                    class="inline-flex items-center gap-2 bg-brand-orange hover:bg-orange-600 text-white font-bold py-4 px-8 rounded-lg transition-all transform hover:scale-105 relative z-10 shadow-lg shadow-brand-orange/20"
                >
                    Book a Consultation <Zap className="w-5 h-5" />
                </a>
            </div>
        </section>
    </main>

    <Footer />
</Layout>
