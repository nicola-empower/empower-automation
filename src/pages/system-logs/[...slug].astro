---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import {
    Inbox,
    Calendar,
    FileText,
    Users,
    Star,
    Rocket,
    Zap,
    Bot,
    Sparkles,
    TrendingDown,
    Gem,
    BarChart3,
    Bell,
    RefreshCw,
    Settings,
    Database,
    ShieldCheck,
    Check,
    ArrowRight,
    Lock,
    Eye,
    Clock,
    Calculator,
    Monitor,
    MessageCircle,
    Briefcase,
    Heart,
    Megaphone,
    TrendingUp,
    Hourglass,
    Frown,
    PenTool,
    ClipboardList,
    Link,
    XCircle,
    Flame,
    StopCircle,
    FolderOpen,
    Handshake,
    Coins,
    Receipt,
    Mail,
    File,
    AlertCircle,
    Wrench,
    Banknote,
    CalendarDays,
    Code,
    FileSpreadsheet,
    Brain,
    CheckCircle,
    UserPlus,
    Trash2,
    Archive,
    Server,
    Cpu,
    Globe,
    BookOpen,
    Terminal,
    Moon,
    Sun,
    Coffee,
    LifeBuoy,
    Smile,
    Magnet,
    Filter,
    Map,
    Layout as LucideLayout,
    Quote,
    Play,
} from "lucide-react";

export async function getStaticPaths() {
    const posts = await getCollection("system-logs");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<"system-logs">;

const post = Astro.props;
const { Content } = await post.render();

const components = {
    Inbox,
    Calendar,
    FileText,
    Users,
    Star,
    Rocket,
    Zap,
    Bot,
    Sparkles,
    TrendingDown,
    Gem,
    // Aliases if needed, but I used IconPrefix in MDX, so I should map them
    IconInbox: Inbox,
    IconCalendar: Calendar,
    IconFileText: FileText,
    IconUsers: Users,
    IconStar: Star,
    IconRocket: Rocket,
    IconZap: Zap,
    IconBot: Bot,
    IconSparkles: Sparkles,
    IconTrendingDown: TrendingDown,
    IconGem: Gem,
    IconBarChart: BarChart3,
    IconBell: Bell,
    IconRefresh: RefreshCw,
    IconSettings: Settings,
    IconDatabase: Database,
    IconShield: ShieldCheck,
    IconCheck: Check,
    IconArrowRight: ArrowRight,
    IconLock: Lock,
    IconEye: Eye,
    IconClock: Clock,
    IconCalculator: Calculator,
    IconMonitor: Monitor,
    IconMessageCircle: MessageCircle,
    IconBriefcase: Briefcase,
    IconHeart: Heart,
    IconMegaphone: Megaphone,
    IconTrendingUp: TrendingUp,
    IconHourglass: Hourglass,
    IconFrown: Frown,
    IconPenTool: PenTool,
    IconClipboardList: ClipboardList,
    IconLink: Link,
    IconXCircle: XCircle,
    IconFlame: Flame,
    IconStopCircle: StopCircle,
    IconFolderOpen: FolderOpen,
    IconHandshake: Handshake,
    IconCoins: Coins,
    IconReceipt: Receipt,
    IconMail: Mail,
    IconFile: File,
    IconAlertCircle: AlertCircle,
    IconWrench: Wrench,
    IconBanknote: Banknote,
    IconCalendarDays: CalendarDays,
    IconCode: Code,
    IconFileSpreadsheet: FileSpreadsheet,
    IconBrain: Brain,
    IconCheckCircle: CheckCircle,
    IconUserPlus: UserPlus,
    IconTrash2: Trash2,
    IconArchive: Archive,
    IconServer: Server,
    IconCpu: Cpu,
    IconGlobe: Globe,
    IconBookOpen: BookOpen,
    IconTerminal: Terminal,
    IconMoon: Moon,
    IconSun: Sun,
    IconCoffee: Coffee,
    IconLifeBuoy: LifeBuoy,
    IconSmile: Smile,
    IconMagnet: Magnet,
    IconFilter: Filter,
    IconMap: Map,
    IconLayout: LucideLayout,
    IconQuote: Quote,
    IconPlay: Play,
};
---

<Layout title={`${post.data.title} | System Logs`}>
    <Navbar />
    <main class="pt-32 pb-20 px-4">
        <article class="max-w-3xl mx-auto">
            <!-- Header -->
            <div class="mb-12 border-b border-gray-800 pb-8">
                <div class="flex gap-2 mb-6">
                    <a
                        href="/system-logs"
                        class="text-gray-500 hover:text-brand-orange transition-colors font-mono text-sm"
                    >
                        &lt; cd ..
                    </a>
                </div>

                <h1
                    class="text-3xl md:text-5xl font-bold text-white mb-6 font-mono"
                >
                    {post.data.title}
                </h1>

                <div
                    class="flex items-center gap-4 text-sm text-gray-400 font-mono"
                >
                    <span
                        class="bg-gray-900 px-3 py-1 rounded border border-gray-800"
                    >
                        {
                            post.data.pubDate.toLocaleDateString("en-GB", {
                                year: "numeric",
                                month: "long",
                                day: "numeric",
                            })
                        }
                    </span>
                    {
                        post.data.tags && (
                            <div class="flex gap-2">
                                {post.data.tags.map((tag) => (
                                    <span class="text-brand-gold">#{tag}</span>
                                ))}
                            </div>
                        )
                    }
                </div>
            </div>

            <!-- Content -->
            <div
                class="prose prose-invert prose-lg max-w-none prose-headings:font-mono prose-headings:text-white prose-a:text-brand-orange prose-code:text-brand-gold prose-pre:bg-[#0d1117] prose-pre:border prose-pre:border-gray-800"
            >
                <Content components={components} />
            </div>

            <!-- Footer Navigation -->
            <div class="mt-16 pt-8 border-t border-gray-800">
                <a
                    href="/system-logs"
                    class="inline-flex items-center text-brand-orange hover:text-white transition-colors font-bold font-mono"
                >
                    <span class="mr-2">&lt;</span> RETURN_TO_ROOT
                </a>
            </div>
        </article>
    </main>
    <Footer />
</Layout>
