---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { AlertTriangle, Home, FileText } from "lucide-react";

export const prerender = true;
---

<Layout title="404: System Malfunction | Empower Automation">
    <Navbar />
    <main
        class="min-h-screen pt-32 pb-20 px-4 flex items-center justify-center relative overflow-hidden bg-[#0a0a0a]"
    >
        <!-- Background Elements -->
        <div
            class="absolute inset-0 bg-[radial-gradient(circle_at_center,_rgba(255,59,48,0.05)_0%,_transparent_70%)] z-0 pointer-events-none"
        >
        </div>

        <div class="relative z-10 max-w-2xl w-full text-center">
            <!-- Glitch Effect Container -->
            <div class="relative inline-block mb-8">
                <h1
                    class="text-9xl font-bold font-mono text-transparent bg-clip-text bg-linear-to-r from-red-600 to-brand-orange animate-pulse"
                >
                    404
                </h1>
                <div
                    class="absolute -inset-1 bg-red-500/10 blur-xl rounded-full opacity-50"
                >
                </div>
            </div>

            <div
                class="flex items-center justify-center gap-3 mb-8 text-red-500 font-mono text-xl animate-bounce"
            >
                <AlertTriangle className="w-6 h-6" />
                <span class="tracking-widest uppercase">System Malfunction</span
                >
                <AlertTriangle className="w-6 h-6" />
            </div>

            <!-- Terminal Output -->
            <div
                class="bg-gray-900/80 border border-gray-800 rounded-lg p-6 mb-12 text-left font-mono text-sm md:text-base backdrop-blur-sm shadow-2xl overflow-hidden relative group"
            >
                <div
                    class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-red-500 to-transparent opacity-50"
                >
                </div>
                <div class="space-y-2 text-gray-400">
                    <p>
                        > <span class="text-blue-400">initiating</span> diagnostics...
                    </p>
                    <p>
                        > <span class="text-red-400">ERROR:</span> Target resource
                        not found.
                    </p>
                    <p>
                        > <span class="text-yellow-400">WARNING:</span> Navigation
                        path corrupted.
                    </p>
                    <p>
                        > <span class="text-green-400">SUGGESTION:</span> Reroute
                        to safe harbor.
                    </p>
                    <p class="animate-pulse">> _</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col md:flex-row gap-4 justify-center">
                <a
                    href="/"
                    class="inline-flex items-center justify-center gap-2 px-8 py-3 bg-white text-black font-bold rounded hover:bg-gray-200 transition-all duration-300 group"
                >
                    <Home
                        className="w-5 h-5 group-hover:scale-110 transition-transform"
                    />
                    <span>INITIATE_REBOOT</span>
                </a>
                <a
                    href="/system-logs"
                    class="inline-flex items-center justify-center gap-2 px-8 py-3 bg-gray-900 text-white border border-gray-700 font-bold rounded hover:bg-gray-800 hover:border-gray-500 transition-all duration-300 group"
                >
                    <FileText
                        className="w-5 h-5 group-hover:scale-110 transition-transform"
                    />
                    <span>CHECK_LOGS</span>
                </a>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
