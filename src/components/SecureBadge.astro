---
import { Shield, Lock, Server } from "lucide-react";
---

<div class="inline-flex flex-col items-center group cursor-default">
    <div
        class="relative flex items-center justify-center p-4 rounded-xl bg-gradient-to-br from-[#161b22] to-[#0d1117] border border-gray-800 shadow-xl group-hover:border-brand-green/50 transition-all duration-500 overflow-hidden"
    >
        <!-- Glow effect -->
        <div
            class="absolute inset-0 bg-brand-green/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
        >
        </div>

        <div class="relative z-10 flex items-center gap-3">
            <div
                class="bg-brand-green/10 p-2.5 rounded-lg border border-brand-green/20 group-hover:scale-110 transition-transform duration-300"
            >
                <Shield className="w-6 h-6 text-brand-green" />
            </div>
            <div class="text-left">
                <div
                    class="text-xs font-mono text-brand-green mb-0.5 font-bold uppercase tracking-wider"
                >
                    Secure By Design
                </div>
                <div
                    class="text-[10px] text-gray-400 font-mono flex items-center gap-1.5"
                >
                    <Lock className="w-3 h-3" />
                    <span>Native Google Execution</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional Tooltip-style subtext -->
    <div
        class="h-0 overflow-hidden group-hover:h-auto group-hover:mt-2 transition-all duration-300"
    >
        <span
            class="text-[10px] text-gray-500 font-mono bg-[#0d1117] px-2 py-1 rounded border border-gray-800"
            >No 3rd Party Servers</span
        >
    </div>
</div>
