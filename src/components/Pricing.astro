---
import { Check } from "lucide-react";

const tiers = [
    {
        name: "The Essentials",
        price: "£150 - £250",
        description: "Quick wins to solve daily friction.",
        features: [
            "Gmail Archiver",
            "Drive Organiser",
            "Email to Calendar",
            "Uptime Monitor",
            "Depoyment & Testing",
        ],
        cta: "Get Started",
        popular: false,
        borderColor: "border-gray-700",
        hoverBorder: "hover:border-brand-orange",
        iconColor: "text-brand-orange",
    },
    {
        name: "Business Ops",
        price: "£450 - £750",
        description: "Automated workflows to replace manual processes.",
        features: [
            "Form Handlers",
            "Project Task Managers",
            "Trello/Asana Digests",
            "Meeting Minutes Gen",
            "Mass PDF Generation",
            "Team Chat Bots",
        ],
        cta: "Automate Ops",
        popular: true,
        borderColor: "border-brand-gold/50",
        hoverBorder: "hover:border-brand-gold",
        iconColor: "text-brand-gold",
    },
    {
        name: "AI Agents",
        price: "£950 - £2,000+",
        description: "Intelligent agents that act as staff members.",
        features: [
            "AI Executive Assistant",
            "Vision Expense Tracker",
            "Recruiter Bot",
            "Meeting Autopilot",
            "Smart Drafts",
            "Content Multiplier",
        ],
        cta: "Deploy Agents",
        popular: false,
        borderColor: "border-gray-700",
        hoverBorder: "hover:border-brand-magenta",
        iconColor: "text-brand-magenta",
    },
];
---

<section id="pricing" class="py-20 bg-brand-dark relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Simple, Transparent <span class="text-brand-gold">Pricing</span>
            </h2>
            <p class="text-gray-400 max-w-2xl mx-auto text-lg">
                Invest in assets you own. No monthly subscription fees.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                tiers.map((tier) => (
                    <div
                        class={`relative flex flex-col p-8 bg-[#1e1e1e] rounded-2xl border ${tier.borderColor} ${tier.hoverBorder} transition-all duration-300 shadow-xl group`}
                    >
                        {tier.popular && (
                            <div class="absolute top-0 right-0 -mt-3 mr-4">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-brand-gold text-brand-dark uppercase tracking-wide">
                                    Most Popular
                                </span>
                            </div>
                        )}
                        <div class="mb-5">
                            <h3 class="text-xl font-bold text-white mb-2">
                                {tier.name}
                            </h3>
                            <p class="text-gray-400 text-sm h-10">
                                {tier.description}
                            </p>
                        </div>
                        <div class="mb-6">
                            <span class="text-3xl font-bold text-white">
                                {tier.price}
                            </span>
                            {tier.name === "The Essentials" ? (
                                <span class="text-gray-500 text-sm ml-1">
                                    / script
                                </span>
                            ) : (
                                <span class="text-gray-500 text-sm ml-1">
                                    / setup
                                </span>
                            )}
                        </div>
                        <ul class="space-y-4 mb-8 flex-1">
                            {tier.features.map((feature) => (
                                <li class="flex items-start">
                                    <div
                                        class={`shrink-0 w-5 h-5 rounded-full bg-gray-800 flex items-center justify-center mt-0.5 ${tier.iconColor}`}
                                    >
                                        <Check className="w-3 h-3" />
                                    </div>
                                    <span class="ml-3 text-gray-300 text-sm">
                                        {feature}
                                    </span>
                                </li>
                            ))}
                        </ul>
                        <a
                            href="/contact"
                            class={`block w-full py-3 px-6 text-center rounded-lg font-bold transition-all duration-200 ${
                                tier.popular
                                    ? "bg-brand-gold text-brand-dark hover:bg-yellow-400"
                                    : "bg-transparent border border-gray-600 text-white hover:border-white"
                            }`}
                        >
                            {tier.cta}
                        </a>
                    </div>
                ))
            }
        </div>

        <div class="mt-12 text-center">
            <p class="text-gray-500 text-sm">
                Looking for a custom enterprise solution or retainer? <a
                    href="/pricing"
                    class="text-brand-orange hover:underline"
                    >View full price list</a
                >
            </p>
        </div>
    </div>
</section>
