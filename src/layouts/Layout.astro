---
import '../styles/global.css';
import '@fontsource/inter';
import '@fontsource/jetbrains-mono';

interface Props {
	title: string;
    description?: string;
}

const { title, description = "Custom Google Workspace Automation Specialist" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-brand-dark text-gray-300 font-sans antialiased selection:bg-brand-magenta selection:text-white">
		<slot />
	</body>
</html>
