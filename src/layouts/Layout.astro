---
import "../styles/global.css";
import "@fontsource/inter";
import "@fontsource/jetbrains-mono";

import { Analytics } from "@vercel/analytics/react";

interface Props {
	title: string;
	description?: string;
	image?: string;
	schema?: any;
}

const {
	title,
	description = "Custom Google Workspace Automation Specialist. We build bespoke Google Apps Scripts to streamline your business.",
	image = "/og-image.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="manifest" href="/manifest.json" />
		<meta name="theme-color" content="#0a0a0a" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />
		<meta property="og:site_name" content="Empower Automation" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<link rel="sitemap" href="/sitemap-index.xml" />

		<title>{title}</title>

		<!-- Google tag (gtag.js) -->
		<script
			type="text/partytown"
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-YSR6QK019Z"
			is:inline></script>
		<script type="text/partytown" is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-YSR6QK019Z");
		</script>

		<!-- JSON-LD Schema -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify({
				"@context": "https://schema.org",
				"@type": "Organization",
				name: "Empower Automation",
				url: "https://empowerautomation.co.uk",
				logo: "https://empowerautomation.co.uk/favicon.svg",
				sameAs: ["https://linkedin.com/in/empower-automation"],
				contactPoint: {
					"@type": "ContactPoint",
					telephone: "+447402123456",
					contactType: "customer service",
					areaServed: "GB",
					availableLanguage: "en",
				},
			})}
		/>
		{
			Astro.props.schema && (
				<script
					type="application/ld+json"
					set:html={JSON.stringify(Astro.props.schema)}
				/>
			)
		}
	</head>
	<body
		class="bg-brand-dark text-gray-300 font-sans antialiased selection:bg-brand-magenta selection:text-white"
	>
		<a
			href="#main-content"
			class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-brand-orange focus:text-white focus:rounded"
		>
			Skip to content
		</a>
		<div id="main-content">
			<slot />
		</div>
		<Analytics client:only="react" />
	</body>
</html>
